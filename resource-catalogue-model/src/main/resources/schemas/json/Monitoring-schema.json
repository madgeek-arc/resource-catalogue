{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "$defs" : {
    "Metric" : {
      "type" : "object",
      "properties" : {
        "metric" : {
          "$ref" : "#/$defs/URL"
        },
        "probe" : {
          "$ref" : "#/$defs/URL"
        }
      },
      "additionalProperties" : false
    },
    "MonitoringGroup" : {
      "type" : "object",
      "properties" : {
        "endpoint" : {
          "type" : "string"
        },
        "metrics" : {
          "type" : "array",
          "items" : {
            "$ref" : "#/$defs/Metric"
          }
        },
        "serviceType" : {
          "type" : "string"
        }
      },
      "additionalProperties" : false
    },
    "URL" : {
      "type" : "object",
      "properties" : {
        "authority" : {
          "type" : "string"
        },
        "file" : {
          "type" : "string"
        },
        "host" : {
          "type" : "string"
        },
        "port" : {
          "type" : "integer"
        },
        "protocol" : {
          "type" : "string"
        },
        "ref" : {
          "type" : "string"
        }
      },
      "additionalProperties" : false
    }
  },
  "type" : "object",
  "properties" : {
    "id" : {
      "type" : "string"
    },
    "monitoredBy" : {
      "type" : "string"
    },
    "monitoringGroups" : {
      "type" : "array",
      "items" : {
        "$ref" : "#/$defs/MonitoringGroup"
      }
    },
    "serviceId" : {
      "type" : "string"
    }
  },
  "additionalProperties" : false
}